<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import gui.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?scenebuilder-classpath-element ../../target/classes?>

<?import gui.gates.outputs.LightBulb?>
<LightBulb fx:id="abstractGate" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.LightBulbController">
    <children>
        <!-- rotate is temp -->
        <Pane fx:id="inputPane" rotate="180">
            <children>
                <ImageView fx:id="imageView" fitHeight="62.0" fitWidth="53.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../LIGHT_OFF.png" />
                    </image>
                </ImageView>
                <InputNode fx:id="inputnode" fitWidth="15.0" layoutX="77.0" layoutY="24.0">
                    <image>
                        <Image url="@../NODE.png" />
                    </image>
                </InputNode>
                <ImageView fitHeight="4.0" fitWidth="62.0" layoutX="51.0" layoutY="30.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../PEG.png" />
                    </image>
                </ImageView>
            </children>
        </Pane>
    </children>
</LightBulb>
